# Auto-detect text files and normalize line endings
* text=auto

# Source code
*.py text eol=lf
*.sh text eol=lf

# Documentation
*.md text eol=lf

# Configuration
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Windows specific
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
